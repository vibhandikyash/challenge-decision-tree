    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-node": "9.0.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "2.3.0",
    "nodemon": "1.19.0",
    "prettier": "1.17.1"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "2.2.3",
    "dotenv": "8.0.0",
    "jest": "^26.0.1",
    "joi": "14.3.1",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
