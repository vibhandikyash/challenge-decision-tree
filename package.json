    "dev": "nodemon index.js",
    "format": "prettier --write \"**/*.+(js|yml|yaml|json)\"",
    "lint": "eslint .",
    "start": "node index.js",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "eslint": "5.16.0",
